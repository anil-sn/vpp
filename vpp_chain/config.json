{
  "default_mode": "gcp",
  "modes": {
    "gcp": {
      "networks": [
        {
          "name": "external-traffic",
          "subnet": "172.20.100.0/24",
          "gateway": "172.20.100.1",
          "description": "External VXLAN traffic ingress (isolated from host)",
          "mtu": 9000
        },
        {
          "name": "vxlan-processing",
          "subnet": "172.20.101.0/24",
          "gateway": "172.20.101.1",
          "description": "VXLAN to Security Processor communication (isolated)",
          "mtu": 9000
        },
        {
          "name": "processing-destination",
          "subnet": "172.20.102.0/24",
          "gateway": "172.20.102.1",
          "description": "Security Processor to Destination communication (isolated)"
        }
      ],
      "containers": {
        "vxlan-processor": {
          "description": "VXLAN decapsulation and forwarding",
          "dockerfile": "src/containers/Dockerfile.vxlan",
          "config_script": "src/containers/vxlan-config.sh",
          "interfaces": [
            {
              "name": "eth0",
              "network": "external-traffic",
              "ip": {
                "address": "172.20.100.10",
                "mask": 24
              }
            },
            {
              "name": "eth1",
              "network": "vxlan-processing",
              "ip": {
                "address": "172.20.101.10",
                "mask": 24
              }
            }
          ],
          "vxlan_tunnel": {
            "src": "172.20.100.10",
            "dst": "172.20.100.1",
            "vni": 100,
            "decap_next": "l2"
          },
          "routes": [
            {
              "to": "10.10.10.0/24",
              "via": "172.20.101.20",
              "interface": "eth1"
            },
            {
              "to": "172.20.102.0/24",
              "via": "172.20.101.20",
              "interface": "eth1"
            }
          ]
        },
        "security-processor": {
          "description": "Consolidated NAT44 + IPsec + IP Fragmentation processing",
          "dockerfile": "src/containers/Dockerfile.security",
          "config_script": "src/containers/security-config.sh",
          "interfaces": [
            {
              "name": "eth0",
              "network": "vxlan-processing",
              "ip": {
                "address": "172.20.101.20",
                "mask": 24
              }
            },
            {
              "name": "eth1",
              "network": "processing-destination",
              "ip": {
                "address": "172.20.102.10",
                "mask": 24
              },
              "mtu": 1400
            }
          ],
          "nat44": {
            "sessions": 1024,
            "static_mapping": {
              "local_ip": "10.10.10.10",
              "local_port": 2055,
              "external_ip": "172.20.102.10",
              "external_port": 2055
            },
            "inside_interface": "eth0",
            "outside_interface": "eth1"
          },
          "ipsec": {
            "sa_in": {
              "id": 2000,
              "spi": 2000,
              "crypto_alg": "aes-gcm-128",
              "crypto_key": "4a506a794f574265564551694d653768"
            },
            "sa_out": {
              "id": 1000,
              "spi": 1000,
              "crypto_alg": "aes-gcm-128",
              "crypto_key": "4a506a794f574265564551694d653768"
            },
            "tunnel": {
              "src": "172.20.101.20",
              "dst": "172.20.102.20",
              "local_ip": "10.100.100.1/30",
              "remote_ip": "10.100.100.2/30"
            }
          },
          "fragmentation": {
            "mtu": 1400,
            "enable": true
          },
          "routes": [
            {
              "to": "172.20.102.0/24",
              "via": "172.20.102.1",
              "interface": "eth1"
            },
            {
              "to": "10.0.3.0/24",
              "via": "ipip0"
            }
          ]
        },
        "destination": {
          "description": "Destination endpoint with TAP interface and packet capture",
          "dockerfile": "src/containers/Dockerfile.destination",
          "config_script": "src/containers/destination-config.sh",
          "interfaces": [
            {
              "name": "eth0",
              "network": "processing-destination",
              "ip": {
                "address": "172.20.102.20",
                "mask": 24
              }
            }
          ],
          "tap_interface": {
            "id": 0,
            "name": "vpp-tap0",
            "ip": "10.0.3.1/24",
            "linux_ip": "10.0.3.2/24",
            "pcap_file": "/tmp/destination-received.pcap",
            "rx_mode": "interrupt"
          },
          "ipsec": {
            "sa_in": {
              "id": 1000,
              "spi": 1000,
              "crypto_alg": "aes-gcm-128",
              "crypto_key": "4a506a794f574265564551694d653768"
            },
            "tunnel": {
              "local_ip": "10.100.100.2/30"
            }
          },
          "routes": [
            {
              "to": "0.0.0.0/0",
              "via": "172.20.102.1"
            },
            {
              "to": "10.0.3.0/24",
              "via": "tap0"
            },
            {
              "to": "10.100.100.0/30",
              "via": "ipip0"
            }
          ]
        }
      },
      "connectivity_tests": [
        {
          "from": "vxlan-processor",
          "to": "172.20.101.20",
          "description": "VXLAN → Security Processor"
        },
        {
          "from": "security-processor", 
          "to": "172.20.102.20",
          "description": "Security Processor → Destination"
        }
      ],
      "traffic_config": {
        "vxlan_port": 4789,
        "vxlan_vni": 100,
        "inner_src_ip": "10.10.10.5",
        "inner_dst_ip": "10.10.10.10",
        "inner_dst_port": 2055,
        "packet_count": 10,
        "packet_size": 1400,
        "test_duration": 10,
        "expected_transformations": [
          "VXLAN decapsulation (vxlan-processor)",
          "NAT44 translation (security-processor)",
          "IPsec encryption (security-processor)",
          "IP fragmentation (security-processor)"
        ]
      }
    }
  }
}